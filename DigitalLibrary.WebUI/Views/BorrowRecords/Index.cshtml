@model IEnumerable<DigitalLibrary.Core.Models.BorrowRecord>

<h2>Журнал видачі книг</h2>

<a asp-action="Create" class="btn btn-primary">Видати книгу</a>

<table class="table mt-3">
    <thead>
        <tr>
            <th>Книга</th>
            <th>Користувач</th>
            <th>Дата видачі</th>
            <th>Дата повернення</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var record in Model)
        {
            <tr>
                <td>@record.Book.Title</td>
                <td>@record.User.Username</td>
                <td>@record.BorrowedAt.ToShortDateString()</td>
                <td>@record.ReturnedAt?.ToShortDateString() ?? "Ще не повернено"</td>
                <td>
                    <a asp-action="Details" asp-route-id="@record.Id" class="btn btn-sm btn-info">Деталі</a>
                    <a asp-action="Edit" asp-route-id="@record.Id" class="btn btn-sm btn-warning">Редагувати</a>
                    <a asp-action="Delete" asp-route-id="@record.Id" class="btn btn-sm btn-danger">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>
