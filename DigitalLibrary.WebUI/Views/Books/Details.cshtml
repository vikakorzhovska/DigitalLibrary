@model DigitalLibrary.Core.Models.Book

@{
    ViewData["Title"] = "Деталі книги";
}

<h2>@Model.Title</h2>

<div class="card p-3">
    <dl class="row">
        <dt class="col-sm-3">Опис:</dt>
        <dd class="col-sm-9">@Model.Description</dd>

        <dt class="col-sm-3">Рік видання:</dt>
        <dd class="col-sm-9">@Model.Year</dd>

        <dt class="col-sm-3">Автор:</dt>
        <dd class="col-sm-9">@Model.Author.FullName</dd>

        <dt class="col-sm-3">Жанр:</dt>
        <dd class="col-sm-9">@Model.Genre.Name</dd>
    </dl>

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-secondary">Редагувати</a>
    <a asp-action="Index" class="btn btn-outline-primary">Назад до списку</a>
</div>

<hr />

<h4 class="mt-4">Залишити відгук</h4>
@if (User.Identity?.IsAuthenticated ?? false)
{
    <form asp-controller="Review" asp-action="Add" method="post" class="mb-4">
        <input type="hidden" name="BookId" value="@Model.Id" />
        <div class="form-group">
            <label for="comment">Коментар:</label>
            <textarea name="Comment" class="form-control" rows="3" required></textarea>
        </div>
        <div class="form-group mt-2">
            <label for="rating">Оцінка (1–5):</label>
            <select name="Rating" class="form-control w-25" required>
                @for (int i = 1; i <= 5; i++)
                {
                    <option value="@i">@i</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary mt-2">Надіслати відгук</button>
    </form>
}
else
{
    <p><em>Увійдіть, щоб залишити відгук.</em></p>
}

<h4 class="mt-5">Відгуки</h4>
@if (Model.Reviews != null && Model.Reviews.Any())
{
    foreach (var review in Model.Reviews)
    {
        <div class="border rounded p-3 mb-3">
            <strong>@review.User?.Username</strong> <span class="text-muted">(@review.Rating/5)</span>
            <p class="mb-1">@review.Comment</p>
            <small class="text-muted">@review.CreatedAt.ToString("g")</small>

            @if (User.IsInRole("Admin"))
            {
                <form asp-controller="Review" asp-action="Delete" method="post" class="mt-2">
                    <input type="hidden" name="id" value="@review.Id" />
                    <input type="hidden" name="bookId" value="@Model.Id" />
                    <button type="submit" class="btn btn-sm btn-danger">Видалити</button>
                </form>
            }
        </div>
    }
}
else
{
    <p>Наразі відгуків немає.</p>
}

