@model DigitalLibrary.Core.ViewModels.BookFilterViewModel

@{
    ViewData["Title"] = "Books";
}

<h1>Books</h1>

<form method="get" asp-controller="Books" asp-action="Index" class="mb-4">
    <div class="form-group">
        <input type="text" name="title" value="@Model.Title" placeholder="Search by title" class="form-control" />
    </div>
    <div class="form-group">
        <select name="authorId" class="form-control">
            <option value="">All Authors</option>
            @foreach (var author in Model.Authors)
            {
                <option value="@author.Id" selected="@(Model.AuthorId == author.Id)">
                    @author.FullName
                </option>
            }
        </select>
    </div>
    <div class="form-group">
        <select name="genreId" class="form-control">
            <option value="">All Genres</option>
            @foreach (var genre in Model.Genres)
            {
                <option value="@genre.Id" selected="@(Model.GenreId == genre.Id)">
                    @genre.Name
                </option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Search</button>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Genre</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model.Books)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author?.FullName</td>
                <td>@book.Genre?.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@book.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@book.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@book.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Add New Book</a>


